@using EvaLabs.Domain.Enums
@using EvaLabs.Common.ExtensionMethod
@model EvaLabs.Domain.Entities.UserTest

@{
    ViewData["Title"] = "CreateReservation";
}

<h1>CreateReservation</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(x => x.LabId)


            <div class="form-group">
                <label asp-for="TestId" class="control-label"></label>
                <select asp-for="TestId" class="form-control" asp-items="ViewBag.TestId"></select>
            </div>

            <div class="form-group">
                <label asp-for="TestDate" class="control-label"></label>
                <input asp-for="TestDate" class="form-control" />
                <span asp-validation-for="TestDate" class="text-danger"></span>
            </div>

            <div class="form-group TestLocation" hidden>
                <label asp-for="TestLocation" class="control-label"></label>
                <div class=" row pl-5">
                    @foreach (var item in Enum.GetValues(typeof(TestLocation)))
                    {
                        <div class="col-6">
                            <label>
                                @Html.RadioButtonFor(m => m.TestLocation, item.To<int>(), new { id = item })
                                @item.ToString().AddSpacesToSentence()
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group BranchId" hidden>
                <label asp-for="BranchId" class="control-label"></label>
                <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId"></select>
            </div>

            <div class="form-group CityId" hidden>
                <label asp-for="CityId" class="control-label"></label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
            </div>
            <div class="form-group AreaId" hidden>
                <label asp-for="AreaId" class="control-label"></label>
                <select asp-for="AreaId" class="form-control" asp-items="ViewBag.AreaId"></select>
            </div>
            <div class="form-group HomeAddress" hidden>
                <label asp-for="HomeAddress" class="control-label"></label>
                <input asp-for="HomeAddress" class="form-control" />
                <span asp-validation-for="HomeAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
